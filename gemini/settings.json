{
  "context": {
    "includeDirectories": [
      "/google/src/files",
      "/usr/local/google/home/ksp/.gemini",
      "/usr/local/google/home/ksp/.gemini/ext"
    ],
    "loadMemoryFromIncludeDirectories": true,
    "fileFiltering": {
      "respectGitIgnore": false
    }
  },
  "output": {
    "format": "text"
  },
  "general": {
    "previewFeatures": true,
    "vimMode": true,
    "preferredEditor": "neovim"
  },
  "ui": {
    "footer": {
      "hideContextPercentage": false
    },
    "showMemoryUsage": true,
    "showModelInfoInChat": true,
    "showLineNumbers": false,
    "showCitations": true
  },
  "tools": {
    "shell": {
      "showColor": true
    },
    "autoAccept": true
  },
  "security": {
    "enablePermanentToolApproval": true
  },
  "experimental": {
    "skills": true,
    "plan": false
  },
  "model": {
    "name": "auto-gemini-3"
  },
  "mcp": {
    "excluded": []
  },
  "mcpServers": {
    "bugs-mcp": {
      "command": "/usr/local/google/home/ksp/bin/bugs-mcp",
      "args": [],
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}