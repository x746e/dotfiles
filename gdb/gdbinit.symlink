# vim: ft=gdb
set history save
set history filename ~/.gdb_history
set history size 50000
# Set limit on string chars or array elements to print.
set print elements 2048
# Set printing of thread events (such as thread start and exit).
set print thread-events off

directory ~/dotfiles/gdb
source python.gdb
source colorful_backtrace.py
source ~/dotfiles/gdb/commands/attach_by_name.py

define pp
  printf "%s\n", ($arg0).c_str()
end
